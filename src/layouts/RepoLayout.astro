---
interface Props {
  title: string;
  repoUrl?: string;
  languages?: string[];
}

import "../styles/bubbles.css";
import "../styles/page.css";
import Footer from '../components/Footer.astro';
import siteConfig from '../custom/site-config';
const { title, repoUrl, languages } = Astro.props as Props;
---

<!doctype html>
<html lang="en" class="h-full" style="scroll-padding-top: 4.5rem;">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<div class="fixed inset-0 z-[-1]"></div>

		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-white dark:bg-gray-900 flex flex-col">
		<div class="fixed inset-0 bg-white dark:bg-gray-900 z-50 flex items-center justify-center page-loader">
			<div class="text-2xl font-bold text-gray-800 dark:text-white loader-text">Loading...</div>
		</div>
		
		<div class="fixed inset-0 z-[-1] bg-gradient-to-br from-white to-gray-200 dark:from-gray-800/80 dark:to-gray-900/80"></div>

		<div class="fixed inset-0 z-[-1]">
			<div class="floating-bubbles">
				<div class="bubble"></div>
				<div class="bubble"></div>
				<div class="bubble"></div>
				<div class="bubble"></div>
				<div class="bubble"></div>
			</div>
		</div>
		
		<header class="sticky top-0 z-30 backdrop-blur-sm bg-white/80 dark:bg-gray-900/80 border-b border-gray-200 dark:border-gray-700">
			<div class="max-w-3xl mx-auto px-4 py-3 flex items-center justify-between">
				<a href="/" class="text-xl font-bold text-gray-800 dark:text-white">{siteConfig.siteName}</a>
				<a href="/repos" class="text-sm font-medium text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 flex items-center">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
					</svg>
					Back to Repos
				</a>
			</div>
		</header>
		
		<main class="max-w-4xl mx-auto px-4 py-8 relative z-10 page-content flex-grow">
			<header class="mb-10 text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4 break-words" style="line-height: 1.3;">{title}</h1>
				
				<div class="flex flex-wrap justify-center gap-4 mb-6">
					{repoUrl && (
						<a href={repoUrl} target="_blank" rel="noopener noreferrer" 
						   class="inline-flex items-center px-4 py-2 bg-gray-800 text-white text-sm font-medium rounded-md hover:bg-gray-700 transition-colors">
							<svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
								<path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z"/>
							</svg>
							View on GitHub
						</a>
					)}
				</div>
				
				{languages && languages.length > 0 && (
					<div class="flex flex-wrap justify-center gap-2">
						{languages.map((lang) => (
							<span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full dark:bg-blue-900/50 dark:text-blue-300">
								{lang}
							</span>
						))}
					</div>
				)}
			</header>
			
			<article class="prose prose-lg dark:prose-invert max-w-none dark:text-gray-100">
				<slot />
			</article>
		</main>
		
		<Footer />

		<script src="/src/scripts/shared-layout.ts"></script>
	</body>
</html>